<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>

  <!-- ================= HEADER ================= -->
<header class="navbar">
    <div class="container nav-flex">
  
      <!-- Hamburger (Mobile only) -->
      <div class="hamburger" onclick="openMenu()">â˜°</div>
  
      <!-- Logo + Brand -->
      <div class="logo">
        <img src="/images/Aarogyam-Logo.jpeg" alt="Aarogyam Lifecare">
        <div class="brand-text">
          <h1 data-i18n="brand">Aarogyam Lifecare</h1>
          <small data-i18n="tagline">Diagnostic & Pathology Centre</small>
        </div>
      </div>
  
      <!-- Desktop Navigation -->
      <nav class="desktop-nav">
        <a href="/" data-i18n="home">Home</a>
        <a href="/tests" data-i18n="tests">Tests</a>
        <a href="/about" data-i18n="about">About</a>
        <a href="/contact" data-i18n="contact">Contact</a>
        <a href="/report-status" data-i18n="reportstatus">Report Status</a>
        <a class="cta" href="/book-test" data-i18n="bookTest">
          Book Test
        </a>
  
        <!-- ðŸŒ Language Switch -->
        <div class="lang-switch">
            <button data-lang="en" onclick="setLanguage('en')">EN</button>
            <button data-lang="hi" onclick="setLanguage('hi')">à¤¹à¤¿à¤‚à¤¦à¥€</button>
          </div>
          
      </nav>
  
    </div>
  </header>
  
<!-- ================= MOBILE SIDEBAR ================= -->
<div id="mobileSidebar" class="mobile-sidebar">

    <!-- Sidebar Header -->
    <div class="sidebar-header">
      <img src="/images/Aarogyam-Logo.jpeg" alt="Aarogyam Lifecare">
      <div>
        <h2 data-i18n="brand">Aarogyam Lifecare</h2>
        <small data-i18n="tagline">Diagnostic & Pathology Centre</small>
      </div>
      <span class="close-btn" onclick="closeMenu()">Ã—</span>
    </div>
  
    <!-- ðŸŒ Language Switch (Mobile) -->
    <div class="mobile-lang-switch">
        <button data-lang="en" onclick="setLanguage('en')">EN</button>
        <button data-lang="hi" onclick="setLanguage('hi')">à¤¹à¤¿à¤‚à¤¦à¥€</button>
      </div>      
  
    <!-- Sidebar Links -->
    <nav class="sidebar-links">
      <a href="/" onclick="closeMenu()" data-i18n="home">Home</a>
      <a href="/tests" onclick="closeMenu()" data-i18n="tests">Tests</a>
      <a href="/about" onclick="closeMenu()" data-i18n="about">About</a>
      <a href="/contact" onclick="closeMenu()" data-i18n="contact">Contact</a>
      <a href="/report-status" onclick="closeMenu()" data-i18n="reportstatus">Report Status</a>
    </nav>
  
    <!-- Sidebar CTA -->
    <a class="mobile-cta" href="/book-test" onclick="closeMenu()" data-i18n="bookTest">
      Book Test
    </a>
  
  </div>
  
  <!-- Overlay -->
  <div id="overlay" onclick="closeMenu()"></div>
  <script src="/js/User.js"></script>

  <!-- ================= JS ================= -->
  <script>
    function openMenu() {
      document.getElementById("mobileSidebar").style.left = "0";
      document.getElementById("overlay").style.display = "block";
    }

    function closeMenu() {
      document.getElementById("mobileSidebar").style.left = "-280px";
      document.getElementById("overlay").style.display = "none";
    }

  function setLanguage(lang) {
    localStorage.setItem("siteLang", lang);
    applyLanguage(lang);
    updateLanguageButtons(lang);
  }

  function applyLanguage(lang) {
    if (!translations[lang]) return;

    document.querySelectorAll("[data-i18n]").forEach(el => {
      const key = el.getAttribute("data-i18n");
      if (translations[lang][key]) {
        el.innerText = translations[lang][key];
      }
    });
  }

  function updateLanguageButtons(lang) {
    // Remove active state from all language buttons
    document.querySelectorAll("[data-lang]").forEach(btn => {
      btn.classList.remove("active");
    });

    // Add active state to selected language buttons (desktop + mobile)
    document.querySelectorAll(`[data-lang="${lang}"]`).forEach(btn => {
      btn.classList.add("active");
    });
  }

  // Apply saved language on page load
  document.addEventListener("DOMContentLoaded", () => {
    const savedLang = localStorage.getItem("siteLang") || "en";
    applyLanguage(savedLang);
    updateLanguageButtons(savedLang);
  });
  </script>

</body>
</html>
