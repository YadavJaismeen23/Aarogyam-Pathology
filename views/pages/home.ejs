<script>
  document.addEventListener("DOMContentLoaded", () => {
  
    /* ===============================
       HERO IMAGE SLIDER
    =============================== */
  
    const desktopImages = [
      "/images/hero/desktop/hero1.jpeg",
      "/images/hero/desktop/hero2.jpeg",
      "/images/hero/desktop/hero3.jpeg",
      "/images/hero/desktop/hero4.jpeg"
    ];
  
    const mobileImages = [
      "/images/hero/mobile/hero-m1.jpeg",
      "/images/hero/mobile/hero-m2.jpeg",
      "/images/hero/mobile/hero-m3.jpeg",
      "/images/hero/mobile/hero-m4.jpeg"
    ];
  
    let index = 0;
    let images = [];
    const heroBg = document.querySelector(".hero-bg");
  
    function isMobile() {
      return window.innerWidth <= 768;
    }
  
    function setImages() {
      images = isMobile() ? mobileImages : desktopImages;
      index = 0;
      heroBg.style.backgroundImage = `url(${images[index]})`;
    }
  
    function changeHeroImage() {
      if (!images.length) return;
      index = (index + 1) % images.length;
      heroBg.style.backgroundImage = `url(${images[index]})`;
    }
  
    // Init slider
    setImages();
    setInterval(changeHeroImage, 5000);
  
    window.addEventListener("resize", setImages);
  
  
    /* ===============================
       HERO FEATURE FLIP (MOBILE + DESKTOP)
    =============================== */
  
    document.querySelectorAll(".feature-box").forEach(box => {
      box.addEventListener("click", e => {
        e.preventDefault();
  
        const inner = box.querySelector(".feature-inner");
  
        // Close other cards
        document.querySelectorAll(".feature-inner").forEach(el => {
          if (el !== inner) el.classList.remove("flipped");
        });
  
        inner.classList.toggle("flipped");
      });
    });
  
  });
  </script>
  

